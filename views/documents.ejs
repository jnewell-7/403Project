<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tax Documents</title>
  <link rel="stylesheet" href="/styles/documents.css">
</head>
<body>
  <!-- Header Section -->
  <header>
    <h1>Tax Documents</h1>
  </header>

  <!-- Navigation Section -->
  <nav>
    <ul>
      <li><a href="/index">Home</a></li>
      <li><a href="/faqs">FAQs</a></li>
      <li><a href="/documents">Tax Documents</a></li>
      <li><a href="/procedures">Company Procedures</a></li>
      <li><a href="/users">Manage Users</a></li>
    </ul>
  </nav>

  <!-- Main Content Section -->
<main>
  <h2>Popular Tax Documents</h2>
  <p>Below are commonly used tax documents and their respective instructions:</p>

  <!-- Search Bar -->
  <div class="search-container">
    <input type="text" id="search-bar" placeholder="Search for documents..." />
  </div>

  <!-- Document Section -->
  <section id="document-list">
    <% documents.forEach(doc => { %>
      <div class="document-item">
        <h3><%= doc.title %></h3>
        <p><%= doc.description %></p>
        <a href="<%= doc.download_link %>" class="btn" target="_blank">Download <%= doc.title.split(":")[0] %></a>
        <a href="<%= doc.instructions_link %>" class="btn" target="_blank">Instructions for <%= doc.title.split(":")[0] %></a>
      </div>
    <% }); %>
  </section>
</main>

<script>
  // Search bar functionality
  const searchBar = document.getElementById('search-bar');
  const documentList = document.getElementById('document-list');
  
  searchBar.addEventListener('input', function () {
    const query = searchBar.value.toLowerCase();
    const items = documentList.getElementsByClassName('document-item');

    // Filter the documents based on the search query
    Array.from(items).forEach(item => {
      const title = item.querySelector('h3').textContent.toLowerCase();
      const description = item.querySelector('p').textContent.toLowerCase();
      
      if (title.includes(query) || description.includes(query)) {
        item.style.display = ''; // Show matching items
      } else {
        item.style.display = 'none'; // Hide non-matching items
      }
    });
  });
</script>