<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Admin - <%= admin.username %></title>
  <link rel="stylesheet" href="/styles/edituser.css">
</head>

<body>
  <!-- Header Section -->
  <header>
    <h1>Edit Admin Details</h1>
  </header>

  <!-- Navigation Section -->
  <nav>
    <ul>
      <li><a href="/index">Home</a></li>
      <li><a href="/users">Admin List</a></li>
    </ul>
  </nav>

  <!-- Main Content Section -->
  <main>
    <div class="form-container">
      <form action="/editAdmin/<%= admin.user_id %>" method="POST">
        <!-- Hidden Input for User ID -->
        <input type="hidden" name="user_id" value="<%= admin.user_id %>">

        <!-- Username -->
        <label for="username">Username</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          value="<%= admin.username %>" 
          required 
          placeholder="Enter username">

        <!-- Email -->
        <label for="email">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          value="<%= admin.email %>" 
          required 
          placeholder="Enter email">

        <!-- Password -->
        <label for="password">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          value="<%= admin.password %>" 
          required 
          placeholder="Enter password">

        <!-- Role -->
        <label for="role">Role</label>
        <select id="role" name="role" required>
          <option value="admin" <%= admin.role === 'admin' ? 'selected' : '' %>>Admin</option>
          <option value="editor" <%= admin.role === 'editor' ? 'selected' : '' %>>Editor</option>
          <option value="viewer" <%= admin.role === 'viewer' ? 'selected' : '' %>>Viewer</option>
        </select>

        <!-- Save and Cancel Buttons -->
        <div class="button-group">
          <button type="submit" class="btn save">Save Changes</button>
          <a href="/users" class="btn cancel">Cancel</a>
        </div>
      </form>
    </div>
  </main>

  <!-- Footer Section -->
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Tax Hawk Inc.</p>
  </footer>
</body>

</html>
